            <x:Arguments>
                <views:HomePage />
            </x:Arguments>
        </NavigationPage>
        <!--USER PROFILE-->
        <NavigationPage Title="Profil">
            <NavigationPage.Icon>
                <OnPlatform x:TypeArguments="FileImageSource">
